{
  "extends": [
    "secrets"
  ],
  "create": [
    {
      "name": "~/.config/bash",
      "mode": "750"
    },
    {
      "name": "~/.config/waybar",
      "mode": "750"
    },
    {
      "name": "~/.config/mako",
      "mode": "750"
    },
    {
      "name": "~/.config/git",
      "mode": "750"
    },
    {
      "name": "~/.config/xdg-desktop-portal-wlr",
      "mode": "750"
    },
    {
      "name": "~/.config/swaync",
      "mode": "750"
    }
  ],
  "link": [
    {
      "src": "bash/bashrc",
      "dst": "~/.bashrc"
    },
    {
      "src": "bash/goprivate.sh.secret",
      "dst": "~/.config/bash/goprivate.sh"
    },
    {
      "src": "sway",
      "dst": "~/.config/sway"
    },
    {
      "src": "chromium-flags.conf",
      "dst": "~/.config/chromium-flags.conf"
    },
    {
      "src": "chrome-flags.conf",
      "dst": "~/.config/chrome-flags.conf"
    },
    {
      "src": "nvim",
      "dst": "~/.config/nvim"
    },
    {
      "src": "wofi",
      "dst": "~/.config/wofi"
    },
    {
      "src": "applications",
      "dst": "~/.local/share/applications"
    },
    {
      "src": "waybar/config",
      "dst": "~/.config/waybar/config"
    },
    {
      "src": "waybar/style.css",
      "dst": "~/.config/waybar/style.css"
    },
    {
      "src": "mako/config",
      "dst": "~/.config/mako/config"
    },
    {
      "src": "alacritty",
      "dst": "~/.config/alacritty"
    },
    {
      "src": "git/ignore",
      "dst": "~/.config/git/ignore"
    },
    {
      "src": "environment.d",
      "dst": "~/.config/environment.d"
    },
    {
      "src": "xdg-desktop-portal-wlr/config",
      "dst": "~/.config/xdg-desktop-portal-wlr/config"
    },
    {
      "src": ".profile",
      "dst": "~/.profile"
    },
    {
      "src": "swaync_config.json",
      "dst": "~/.config/swaync/config.json"
    }
  ],
  "template": [
    {
      "src": "git/config",
      "dst": "~/.config/git/config"
    },
    {
      "src": "git/cardtokens.conf",
      "dst": "~/.config/git/cardtokens.conf"
    }
  ]
}
