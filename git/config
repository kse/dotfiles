[user]
	name = $git_config_name
	email = $git_config_email
  signingkey = $git_config_signingkey

[commit]
	gpgsign = true

[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto

[apply]
	whitespace = warn

[alias]
	co = checkout
	cp = cherry-pick
	st = status -sb
	ci = commit
	b  = branch
	lg = log --oneline --graph --decorate -n 30

[include]
	path = .github

[push]
	default = tracking

[help]
	autocorrect = 1

[core]
	excludesfile = ~/.config/git/ignore

[pull]
	rebase = true
[init]
	defaultBranch = main
[merge]
	tool = nvimdiff
[mergetool]
	keepBackup = false

[tag]
  gpgsign = true
  sort = v:refname

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
